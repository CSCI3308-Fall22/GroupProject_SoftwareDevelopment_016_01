<div class="col"><%- include ('../partials/message') %></div>
<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <% if(data.length === 0){ %>
        <h4 class="text-center display-6">You are currently enrolled in all programs</h4>
    <% }else{ %>
        <div class="container">
            <h1 class="display-6">Join Programs</h1>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">Program</th>
                    <th scope="col"></th>
                    <th scope="col">Coach</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody id="tableBody">
                <% data.forEach(ev => { %>
                <tr>
                    <td><%= ev.program_name %></td>
                    <td></td>
                    <td><%= ev.owner_name %></td>
                    <td>
                        <form style="margin:0" action='/joinprogram' method='POST'><input type="hidden"
                                                                                          name="program_id"
                                                                                          value="<%- ev.program_id %>"/>
                            <button type='submit' class='btn btn-outline-primary'>Join</button>
                        </form>
                    </td>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
</main>

<%- include ('../partials/footer') %>