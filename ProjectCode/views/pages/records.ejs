<div class="col">
    <%- include ('../partials/message') %>
</div>
<%- include ('../partials/header') %>
    <%- include ('../partials/menu') %>

        <main>

            <% if(data.length===0){ %>
                <h3 class="text-center display-6">There are no current Personal Records posted</h3>
                <% }else{ %>
                    <div class="container ">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Username</th>
                                    <th scope="col">Personal Record</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- add loop -->
                                <% data.forEach(function(user) { %>
                                    <tr>
                                        <td>
                                            <%= user.username %>
                                        </td>
                                        <td>
                                            <%= user.pr %>
                                        </td>
                                        <% if(data.username == user.username) { %>
                                        <td>
                                            <!-- Edit button if the user listed is the user -->
                                            <form action="" method="POST">
                                                <input type="hidden" name="user_pr" value="<%- user.user_pr -%>" />
                                                <button id="submit_button" class="btn btn-outline-success" type="submit">Edit</button>
                                            </form>
                                        </td>
                                        <% } %>
                                        
                                    </tr>
                                <% }) %>
                                <% if(locals.message) { %>
                                    <div class="alert alert-<%- locals.error ? 'danger' : 'success' -%>"
                                        role="alert">
                                        <%= message %>
                                    </div>
                                <% } %>
                            </tbody>
                        </table>
                        <% } %>
        </main>
<%- include ('../partials/footer') %>